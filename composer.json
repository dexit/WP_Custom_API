{
    "name": "wp-custom-api/endpoint-manager",
    "description": "Enterprise-grade WordPress REST API Endpoint Manager with visual workflow builder, job scheduling, and advanced data transformation",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Chris Paschall",
            "email": "chris@example.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "woocommerce/action-scheduler": "^3.7",
        "monolog/monolog": "^2.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "phpmd/phpmd": "^2.14",
        "phpdocumentor/phpdocumentor": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "WP_Custom_API\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WP_Custom_API\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=WordPress includes/",
        "phpcbf": "phpcbf --standard=WordPress includes/",
        "phpstan": "phpstan analyse includes/",
        "phpmd": "phpmd includes/ text cleancode,codesize,controversial,design,naming,unusedcode"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
